// Test modulo operator
pattern test_modulo {
    a = 10
    b = 3
    result = a % b
    print("10 % 3 =", result)
}

// Test vector creation and operations
pattern test_vectors {
    // Test vec2
    v2 = vec2(3, 4)
    print("vec2(3, 4) =", v2)
    
    // Test vec3
    v3 = vec3(1, 2, 3)
    print("vec3(1, 2, 3) =", v3)
    
    // Test vec4
    v4 = vec4(1, 0, 0, 1)
    print("vec4(1, 0, 0, 1) =", v4)
    
    // Test vector length
    len = length(v2)
    print("length of vec2(3, 4) =", len)
    
    // Test vector dot product
    v2_other = vec2(1, 2)
    dot_result = dot(v2, v2_other)
    print("dot(vec2(3,4), vec2(1,2)) =", dot_result)
    
    // Test vector normalization
    normalized = normalize(v2)
    print("normalized vec2(3, 4) =", normalized)
    
    // Test normalized length should be 1
    norm_len = length(normalized)
    print("length of normalized vector =", norm_len)
}
