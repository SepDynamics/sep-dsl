{
  "name": "sep-dsl",
  "displayName": "SEP DSL",
  "description": "Advanced AGI Pattern Analysis Language support for VS Code",
  "version": "1.0.0",
  "publisher": "sepdynamics",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SepDynamics/sep-dsl.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "sep-dsl",
    "pattern-analysis",
    "agi",
    "quantum-computing",
    "machine-learning"
  ],
  "activationEvents": [
    "onLanguage:sep"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sep",
        "aliases": [
          "SEP DSL",
          "sep"
        ],
        "extensions": [
          ".sep"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sep",
        "scopeName": "source.sep",
        "path": "./syntaxes/sep.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sep",
        "path": "./snippets/sep.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SEP DSL",
      "properties": {
        "sepDsl.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time error diagnostics"
        },
        "sepDsl.enableAutoComplete": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-completion"
        },
        "sepDsl.maxNumberOfProblems": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of problems to report"
        },
        "sepDsl.languageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the SEP DSL language server"
        }
      }
    },
    "commands": [
      {
        "command": "sepDsl.analyze",
        "title": "Analyze Pattern",
        "category": "SEP DSL"
      },
      {
        "command": "sepDsl.validateSyntax",
        "title": "Validate Syntax",
        "category": "SEP DSL"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
