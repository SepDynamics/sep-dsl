// Test comprehensive math functions

pattern test_math {
    // Basic operations
    x: Number = 16
    y: Number = 3.14159
    
    // Power and root functions
    print("sqrt(16):", sqrt(x))
    print("cbrt(8):", cbrt(8))
    print("pow(2, 3):", pow(2, 3))
    print("abs(-5):", abs(-5))
    
    // Trigonometric functions (in radians)
    print("sin(pi()/2):", sin(pi() / 2))
    print("cos(0):", cos(0))
    print("tan(pi()/4):", tan(pi() / 4))
    
    // Inverse trig functions  
    print("asin(1):", asin(1))
    print("acos(0):", acos(0))
    print("atan(1):", atan(1))
    print("atan2(1, 1):", atan2(1, 1))
    
    // Exponential and logarithmic
    print("exp(1):", exp(1))
    print("log(e()):", log(e()))
    print("log10(100):", log10(100))
    print("log2(8):", log2(8))
    
    // Rounding functions
    value: Number = 3.7
    print("floor(3.7):", floor(value))
    print("ceil(3.7):", ceil(value))
    print("round(3.7):", round(value))
    print("trunc(3.7):", trunc(value))
    
    // Modular arithmetic
    print("fmod(10, 3):", fmod(10, 3))
    
    // Constants
    print("pi():", pi())
    print("e():", e())
    
    // Min/max
    print("min(5, 3):", min(5, 3))
    print("max(5, 3):", max(5, 3))
}
