// Data Transformation Functions Test
pattern data_preprocessing {
    // Sample dataset with various ranges
    raw_data = [10, 25, 30, 15, 40, 35, 20, 45, 50, 5]
    
    // Test normalization (scale to 0-1)
    normalized = normalize(10, 25, 30, 15, 40, 35, 20, 45, 50, 5)
    
    // Test standardization (z-score)
    standardized = standardize(10, 25, 30, 15, 40, 35, 20, 45, 50, 5)
    
    // Test custom scaling (scale to 0-100)
    scaled_0_100 = scale(0, 100, 10, 25, 30, 15, 40, 35, 20, 45, 50, 5)
    
    // Test filtering functions
    above_25 = filter_above(25, 10, 25, 30, 15, 40, 35, 20, 45, 50, 5)
    below_25 = filter_below(25, 10, 25, 30, 15, 40, 35, 20, 45, 50, 5)
    range_20_40 = filter_range(20, 40, 10, 25, 30, 15, 40, 35, 20, 45, 50, 5)
    
    // Test clamping (force values into range)
    clamped_15_35 = clamp(15, 35, 10, 25, 30, 15, 40, 35, 20, 45, 50, 5)
    
    // Get specific values for verification
    first_norm = normalized[0]        // Should be (10-5)/(50-5) = 0.111...
    first_std = standardized[0]       // Should be negative (below mean)
    first_scaled = scaled_0_100[0]    // Should be (10-5)/(50-5)*100 = 11.111...
    
    // Display results
    print("=== Data Transformation Demo ===")
    print("Original data:", raw_data)
    print("Normalized [0,1]:", normalized)
    print("First normalized:", first_norm)
    print("Standardized (z-score):", standardized) 
    print("First standardized:", first_std)
    print("Scaled [0,100]:", scaled_0_100)
    print("First scaled:", first_scaled)
    print("Filtered above 25:", above_25)
    print("Filtered below 25:", below_25)
    print("Filtered range [20,40]:", range_20_40)
    print("Clamped [15,35]:", clamped_15_35)
    print("=== Data Preprocessing Complete! ===")
}
